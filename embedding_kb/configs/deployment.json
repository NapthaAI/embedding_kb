[
    {
        "name": "kb_deployment_1",
        "module": {"name": "embedding_kb"},
        "node": {"ip": "localhost"},
        "config": {
            "storage_type": "db",
            "path": "embedding_kb",
            "query_col": "title",
            "answer_col": "text",
            "schema": {
                "id": {"type": "INTEGER", "primary_key": true},
                "text": {"type": "TEXT"},
                "embedding": {"type": "vector", "dimension": 1536},
                "metadata": {"type": "jsonb"}
            },
            "options": {
                "embedder": {
                    "model": "text-embedding-3-small",
                    "chunk_size": 1000,
                    "chunk_overlap": 200,
                    "separators": ["\n\n", "\n", ". ", " ", ""],
                    "embedding_dim": 1536
                },
                "retriever": {
                    "type": "vector",
                    "field": "embedding",
                    "k": 5
                }
            }
        }
    }
]